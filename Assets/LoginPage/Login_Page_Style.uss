.login-dialog {
    display: none;
    background-color: transparent;
    border-color: transparent;
    position: absolute;
    top: 35%;
    left: 14%;
    width: 38%;
    padding: 20px;
    background-color: rgba(255, 255, 255, 0);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-image: url("project://database/Assets/Assets_Kenny_pack/wood_button_without_background.png?fileID=-1352690001&guid=8b6229feb0785564096c6b73b5c50128&type=3#wood_button_without_background_46");
    height: 40%;
    border-left-color: rgba(0, 0, 0, 0);
    border-right-color: rgba(0, 0, 0, 0);
    border-top-color: rgba(0, 0, 0, 0);
    border-bottom-color: rgba(0, 0, 0, 0);
    font-size: 8px;
    -unity-background-scale-mode: stretch-to-fill;
    -unity-slice-left: 10;
    -unity-slice-top: 0;
    -unity-slice-right: 6;
    -unity-slice-bottom: 16;
    -unity-slice-scale: 0.9px;
    border-bottom-right-radius: 4px;
    translate: 0 -194%;
    transition-duration: 1.2s;
    transition-timing-function: ease-out-bounce;
    opacity: 1;
}

.login-dialog--down {
    display: flex;
    translate: 0 -26%;
    opacity: 1;
}

.user-name-field {
    width: 47%;
    position: absolute;
    height: 15%;
    font-size: 22px;
}

.submit-user-name {
    background-color: transparent;
    border-color: transparent;
    position: absolute;
    left: 33%;
    top: 60%;
    width: 31%;
    background-image: url("project://database/Assets/Assets_Kenny_pack/wood_button_without_background.png?fileID=-304149937&guid=8b6229feb0785564096c6b73b5c50128&type=3#wood_button_without_background_48");
    height: 15%;
    font-size: 31px;
}

.close-dialog {
    background-color: transparent;
    border-color: transparent;
    position: absolute;
    top: 15%;
    right: 7%;
    background-image: url("project://database/Assets/Assets_Kenny_pack/wood_button_without_background.png?fileID=2121966&guid=8b6229feb0785564096c6b73b5c50128&type=3#wood_button_without_background_47");
